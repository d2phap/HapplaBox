{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
